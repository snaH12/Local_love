<div class="container">
  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <h2 class="text-center w-25 h4">投稿編集</h2>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-6 mx-auto">
      <%= render 'layouts/errors', obj: @post %>
      <%= form_with model: @post, url: post_path(@post) do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :image, '画像', class: "col-form-label" %></td>
            <td><%= f.file_field :image, accept: 'image/*', class: "form-control-file" %></td>
          </tr>
          <tr>
            <td><%= f.label :title,'タイトル', class: "col-form-label" %></td>
            <td><%= f.text_field :title, placeholder: 'ここタイトルを記述します', class: "form-control post_title" %></td>
          </tr>
          <tr>
            <td><%= f.label :title,'地方', class: "col-form-label" %></td>
            <td>
              <%= f.collection_select(:region_id, *[Region.all], :id, :name, {include_blank:"-- 選択してください --"}, {class:"custom-select"}) %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :body, '本文', class: "col-form-label" %></td>
            <td><%= f.text_area :body,  class: "form-control" %></td>
          </tr>
            <tr>
              <td><%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select w-25"} %></td>
              <td><%= f.submit '更新する', class: "btn btn-success btn-lg" %></td>
            </tr>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>