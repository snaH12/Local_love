<div class="container">
  <div class="row">
    <div class="col-9">
      <%= render 'public/regions/index',regions: @regions %>
      <h3><strong>投稿一覧</strong>（全<%= @posts.count %>件）</h3>
      <div class="row mt-3">
      　<% @posts.each do |post|%>
          <div class="col-3">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_image(100,100), class: "mb-2 d-block w-100", style: "background-size: cover; background-position: center;" %>
            <p class="mb-2"><%= post.title%></p>
            <% end %>
            <p class="mb-2"><%= post.region.name %></p>
            <p class="mb-2"><%= post.user.name %></p>
          </div>
        <% end %>
      </div>
  </div>
</div>