<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>チャットルーム一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ルーム名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= link_to room.name, room_path(room) %></td>
              <td><%= room.users.count %></td>
              <td>
                <% if room.owner_id == current_user.id %>
                  <%= link_to '編集', edit_room_path(room), class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="room-new">
      <%= link_to 'チャットルームを作成', new_room_path %>
     </div>
    </div>
  </div>
</div>