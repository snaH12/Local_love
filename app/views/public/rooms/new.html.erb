<div class="container">
  <div class="row no-gutters">
    <div class=' col-md-12 offset-md-1'>
      <h2 class= 'text-dark p-4 mb-0'>グループ作成</h2>
      
      <table class="w-75 table table-borderless">
        <tbody>
          <tr><%= form_with(model: @room, local: true) do |f| %>
            <td><%= f.label :roomname, 'グループ名' %></td>
            <td><%= f.text_field :roomname, class: 'form-control' %></td>
          </tr>
          <tr>
            <td><%= f.label :user_ids, '参加メンバーの選択' %></td>
            <td><%= f.collection_check_boxes :user_ids, User.all, :id, :name %></td>
          </tr>
          <tr>
            <td><%= f.submit '新規作成', class: "btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
