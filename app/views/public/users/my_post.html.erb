<div class="cover-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3"> <%= @user.name %>さんの投稿一覧</h1>
    </div>
    <div class="row my-5">
        <div class="col">
            <% if @posts.count != 0 %>
             <%= render 'public/posts/index', posts: @posts,tag_list: @tag_list %>
            <% else %>
             <h2 class="m-3">投稿はありません。</h2>　
            <% end %>
        </div>
    </div>
  </div>
</div>