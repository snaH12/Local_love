<header class="sticky-top">
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container">
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <div>
          <% if user_signed_in? %>
           <%= render 'layouts/search' %>
          <% end %>
        </div>
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to new_post_path,class: 'nav-link text-light' do %>
              <i class="fas fa-solid fa-pen-fancy"></i>投稿フォーム
            <% end %>
          </li>
          <li>
            <%= link_to posts_path,class: 'nav-link text-light' do %>
              <i class="fas fa-sharp fa-regular fa-paste"></i>投稿一覧
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user),class: 'nav-link text-light' do %>
              <i class="fas fa-regular fa-user"></i>マイページ
            <% end %>
          </li>
          
          <li>
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% elsif admin_signed_in? %>
        <li class="mr-3">
            <%= link_to "チャットルーム一覧", admin_rooms_path,class: 'nav-link text-light' %>
          </li>
        <li class="mr-3">
            <%= link_to "地方一覧・追加", admin_regions_path,class: 'nav-link text-light' %>
          </li>
        <li class="mr-3">
            <%= link_to "投稿一覧", admin_posts_path,class: 'nav-link text-light' %>
          </li>
          <li class="mr-3">
            <%= link_to "会員一覧", admin_users_path,class: 'nav-link text-light' %>
          </li>
          <li class="mr-3">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: 'nav-link text-light' %>
          </li>
        <% else %>
          <li>
            <%= link_to root_path,class: 'nav-link text-light' do %>
              <i class="fas fa-home"></i> ホーム
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
