<div class='container'>
    <div class='row'>
        <div class="col-8 mx-auto">
            <h2>編集画面</h2>
            <%= image_tag @region.get_image(260,100) %>
            
            <table class="table table-borderless">
                <tr>
                   <%= form_with model: @region, url: admin_region_path(@region) do |f| %>
                  
                   <td></br>
                     <%= f.file_field :image, accept: 'image/*', class: "form-control-file" %></td>
                    <td><%= f.label :name,'地方名' %></br>
                      <%= f.text_field :name, class:'form-control' %>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><%= f.submit class:'btn btn-success' %></td>
                </tr>
                    <% end %>
                </tr>
            </table>
        </div>
    </div>
</div>