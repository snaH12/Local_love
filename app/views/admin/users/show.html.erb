<h1>Admin::Users#show</h1>
<p>Find me in app/views/admin/users/show.html.erb</p>
<div class="container px-5 px-sm-0">

 <div class="row">
  <div class="mt-5 offset-md-1">
   <h2>
    <span class="bg-secondary">
     <%= @user.name %>さんの会員詳細
    </span>
    </h2>
  </div>
 </div>

 <div class="row">
  <div class="mt-5">
   <table class="table table-borderless">
   <tr>
    <td>会員ID</td>
    <td><%= @user.id %></td>
   </tr>
   <tr>
    <td>ユーザー名</td>
    <td>
     <%= @customer.name %>
    </td>
   </tr>
   <tr>
    <td>紹介文</td>
    <td>
     <%= @user.introduction %>
    </td>
   </tr>
   <tr>
    <td>会員ステータス</td>
    <% if @cuser.is_deleted == false %>
     <td><p class="text-success">有効</p></td>
    <% else %>
     <td><p class="text-muted">退会</p></td>
    <% end %>
   </tr>
   <tr>
    <td></td>
    <td><%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-success' %></td>
   </tr>
   </table>
  </div>
 </div>
</div>
