
<div class="container px-5 px-sm-0">

 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2><%= @user.name %>さんの会員詳細</h2>
  </div>
 </div>

 <div class="row">
  <div class="col-8 mx-auto mt-5">
   <table class="table table-borderless">
   <tr>
    <td>会員ID</td>
    <td><%= @user.id %></td>
   </tr>
   <tr>
    <td>ユーザー名</td>
    <td>
     <%= @user.name %>
    </td>
   </tr>
   <tr>
    <td>紹介文</td>
    <td>
     <%= @user.introduction %>
    </td>
   </tr>
   <tr>
    <td>会員ステータス</td>
    <% if @user.is_deleted == false %>
     <td><p class="text-success">有効</p></td>
    <% else %>
     <td><p class="text-muted">退会済</p></td>
    <% end %>
   </tr>
   <tr>
    <td></td>
    <td><%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-success' %></td>
   </tr>
   </table>
  </div>
 </div>
</div>
