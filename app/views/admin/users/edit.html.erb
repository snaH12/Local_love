<h1>Admin::Users#edit</h1>
<p>Find me in app/views/admin/users/edit.html.erb</p>
<div class="container px-5 px-sm-0">
 <div class="row mt-5">
    <%= render 'layouts/errors', obj: @user %>
 </div>
 <div class="row">
  <div class="mt-5 offset-md-1">
   <h2>
    <span class="bg-secondary">
     <%= @user.name %>さんの会員詳細
    </span>
    </h2>
  </div>
 </div>
 <div class="row">
  <div class="mt-5">
   <%= form_with model: @user, url: admi_nuser_path, method: :patch do |f| %>
   <table class="table table-borderless">
   <tr>
    <td>会員ID</td>
    <td><%= @user.id %></td>
   </tr>
   <tr>
    <td>ユーザー名</td>
    <td>
     <%= f.text_field :name %>
    </td>
   </tr>
    <td>会員ステータス</td>
     <td>
     <%= f.label :is_deleted, '有効', value: false %>
     <%= f.radio_button :is_deleted, 'false' %>
     <%= f.label :is_deleted, '退会', value: true %>
     <%= f.radio_button :is_deleted, 'true' %>
    </td>
   </tr>
   <tr>
    <td></td>
    <td><%= f.submit "変更を保存", class: 'btn btn-success btn-sm' %></td>
   </tr>
   </table>
   <% end %>
  </div>
 </div>
</div>